---
// Henter parametrene fra Astro.props

//Definer den styling (Tailwind classes, der gør sig gældende for alle knapper
const { variant = "primary", size = "medium" } = Astro.props;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige varianter
const buttonStyling = "text-black";

//Definer den styling (Tailwind classes), der gør sig gældende for de forskelligeog størrelser.
const variantClasses = {
  primary:
    "bg-yellow-50 text-lime-900 hover:text-yellow-50 hover:bg-lime-900 px-3 py-2 rounded-lg transition duration-100 ease-in-out ",

  secondary:
    "bg-red-900 text-yellow-50 hover:text-red-900 hover:bg-yellow-50 px-3 py-2 rounded-lg transition duration-100 ease-in-out ",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskelligeog størrelser.
const sizeClasses = {
  large: "p-6 text-xl",
  medium: "p-6 text-md",
  small: "p-6 text-sm",
};
---

<button
  class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}
>
  <slot />
</button>
